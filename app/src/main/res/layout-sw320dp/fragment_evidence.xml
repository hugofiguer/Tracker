<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_color"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="#FAFAFA"
        android:weightSum="100">

        <ImageView
            android:layout_width="@dimen/size_photo"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:id="@+id/imgCamera"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:src="@drawable/ic_camara"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:textSize="@dimen/text_camera"
            android:textColor="@color/gray"
            android:layout_gravity="center"
            android:gravity="center|top"
            android:text="@string/text_camera"/>

        <ImageView
            android:id="@+id/imgPhoto"
            android:layout_width="@dimen/size_photo"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:scaleType="fitCenter"
            android:layout_gravity="center"/>


        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/sizeMediumText"
                android:text="Tipo de evidencia:"/>

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:id="@+id/spinnerEvidenceType" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/sizeMediumText"
                android:text="Actividad:"/>

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:id="@+id/spinnerActivity" />

        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:gravity="center"
            android:weightSum="100">


            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:layout_marginRight="5dp"
                android:background="@drawable/border_button_green"
                android:text="@string/accept"
                android:id="@+id/btnAccept" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:layout_marginLeft="5dp"
                android:background="@drawable/border_button_red"
                android:text="@string/cancel"
                android:id="@+id/btnCancel" />
        </LinearLayout>


    </LinearLayout>



</LinearLayout>
